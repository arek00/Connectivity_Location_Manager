<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_connection_type"
                android:id="@+id/connectionTypes"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_connection"
                android:id="@+id/wifiRadio" android:checked="true" android:onClick="setWifi"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ethernet_connection"
                android:id="@+id/ethernetRadio" android:onClick="setEthernet"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wimax_connection"
                android:id="@+id/wimaxRadio" android:onClick="setWimax"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mms_connection"
                android:id="@+id/mmsRadio" android:onClick="setMMS"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile_connection"
                android:id="@+id/mobileInternetRadio" android:onClick="@string/ethernet_connection"/>
    </RadioGroup>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_type"
            android:layout_margin="2dp"
            android:id="@+id/connection_type"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_connection_type"
            android:layout_margin="2dp"
            android:id="@+id/connection_type_name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_state"
            android:layout_margin="2dp"
            android:id="@+id/connection_state"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_connection_state"
            android:layout_margin="2dp"
            android:id="@+id/connection_state_description"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_margin="2dp"
            android:id="@+id/current_connection_name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_margin="2dp"
            android:id="@+id/current_connection_state"/>
</LinearLayout>